<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tw.edu.nsysu.morsenser_morfeeling"
    android:versionCode="1"
    android:versionName="2.1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="21" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/thu_app_icon"
        android:label="@string/app_name2"
        android:theme="@style/AppTheme" >
        <activity android:name="tw.edu.nsysu.morsenser_morfeeling.Register" />
        <activity android:name="tw.edu.nsysu.morsenser_morfeeling.TestTimePicker" />
        <activity
            android:name="tw.edu.nsysu.morsenser_morfeeling.Dialog"
            android:label="@string/app_name"
            android:theme="@style/Theme.Transparent" >
        </activity>

        <service
            android:name="tw.edu.nsysu.bluetooth.BluetoothLeService"
            android:enabled="true" />

        <activity
            android:name="tw.edu.nsysu.morsenser_morfeeling.Login"
            android:label="@string/app_name2"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tw.edu.nsysu.morsenser_morfeeling.IMUViewActivity"
            android:label="@string/app_name2"
            android:screenOrientation="landscape" />
        <activity
            android:name="tw.edu.nsysu.morsenser_morfeeling.DeviceScanActivity"
            android:label="@string/app_name2"
            android:screenOrientation="portrait" />
        <activity
            android:name="tw.edu.nsysu.morsenser_morfeeling.IMU"
            android:label="LINE"
            android:screenOrientation="landscape" />
        <activity
            android:name="tw.edu.nsysu.morsenser_morfeeling.THU"
            android:label=" MorFeeling"
            android:theme="@style/myNoActionbar" >
            android:screenOrientation="portrait"
        </activity>
        <activity
            android:name="tw.edu.nsysu.morsenser_morfeeling.MainActivity"
            android:label="@string/title_activity_main" >
            android:screenOrientation="portrait"
        </activity>
        <activity
            android:name="tw.edu.nsysu.morsenser_morfeeling.THUViewActivity"
            android:label="@string/title_activity_thuview" >
            android:screenOrientation="portrait"
        </activity>
        <activity
            android:name="tw.edu.nsysu.morsenser_morfeeling.ColorViewActivity"
            android:label="@string/title_activity_color_view" >
            android:screenOrientation="portrait"
        </activity>
        <activity
            android:name="tw.edu.nsysu.morsenser_morfeeling.PIRViewActivity"
            android:label="@string/title_activity_pirview" >
            android:screenOrientation="portrait"
        </activity>
        <activity
            android:name="tw.edu.nsysu.morsenser_morfeeling.AlcoholViewActivity"
            android:label="@string/title_activity_alcohol_view" >
            android:screenOrientation="portrait"
        </activity>
        <activity
            android:name="tw.edu.nsysu.morsenser_morfeeling.MicViewActivity"
            android:label="@string/title_activity_mic_view" >
            android:screenOrientation="portrait"
        </activity>

        <receiver android:name="tw.edu.nsysu.morsenser_morfeeling.AlarmReceiver" >
            <intent-filter>

                <!-- 使用Action名稱設定接收的廣播事件 -->
                <action android:name="net.macdidi.broadcast01.action.MYBROADCAST01" />
            </intent-filter>
        </receiver>
    </application>

</manifest>