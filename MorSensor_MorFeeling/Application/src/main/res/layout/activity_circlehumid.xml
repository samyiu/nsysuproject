<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/BackgroundColor"
    android:id="@+id/background" >

    <tw.edu.nsysu.morsenser_morfeeling.CircleProgressView
        android:id="@+id/circleView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        CircleProgressView:barColor="#00b1ff"
        CircleProgressView:barWidth="20dp"
        CircleProgressView:contourSize="0dp"
        CircleProgressView:rimColor="#f0ffff"
        CircleProgressView:rimWidth="20dp"
        CircleProgressView:showUnit="true"
        CircleProgressView:textColor="#00b1ff"
        CircleProgressView:unitSize="20sp"
        CircleProgressView:textSize="60sp"
        CircleProgressView:unit="%"
        CircleProgressView:unitColor="#00b1ff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Humidity"
        android:id="@+id/textView13"
        android:layout_below="@+id/circleView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>